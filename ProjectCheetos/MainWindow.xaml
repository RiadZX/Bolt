<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectCheetos"
        xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock" x:Class="ProjectCheetos.MainWindow"
        mc:Ignorable="d"
        Title="Project Cheetos" Height="450" Width="800" Icon="cheetos-united-states-chester-cheetah-cheese-puffs-fritos-united-cheetos-png-900_500.jpg" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="#FFF3FF00" Background="#FF333333">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>

        <RichTextBox Grid.Column="0" Grid.Row="1" x:Name="TextField" Margin="10,21,0,10" Background="#FF1C1C1C" SelectionBrush="#FF4FABF7" Foreground="White" FontSize="14" FontFamily="Consolas, 'Courier New', monospace" BorderBrush="#FFC5FF00" TextChanged="TextField_TextChanged" AcceptsTab="True">
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </RichTextBox.Resources>
            <FlowDocument>
                <Paragraph/>
            </FlowDocument>
        </RichTextBox>
        <TreeView  Name="trvStructure" TreeViewItem.Expanded="TreeViewItem_Expanded" Margin="10,21,0,10" Background="#FF1C1C1C" Foreground="White" Grid.Column="2" Grid.Row="1" />
        <GridSplitter Grid.Column="1"
              HorizontalAlignment="Center"
              VerticalAlignment="Stretch"
              Background="#6b6b6b" 
              ShowsPreview="True"
              Width="5"
              />

        <DockPanel Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="0">

            <Menu DockPanel.Dock="Top" Background="#FF333333" Foreground="White" BorderBrush="#FFDCFF00" >

                <MenuItem Header="_File" Background="#FF333333" Foreground="White" BorderBrush="#FF333333" Margin="0" Padding="10,0" UseLayoutRounding="True" >
                    <MenuItem Header="_Open" Click="MenuItem_Open" Background="#FF333333" BorderBrush="#FF333333"/>
                    <MenuItem Header="_Save" Background="#FF333333" BorderBrush="#FF333333" Click="Save"/>
                    <MenuItem Header="_Save As" Click="MenuItem_SaveAs" Background="#FF333333" BorderBrush="#FF333333"/>

                </MenuItem>
                <MenuItem Header="_Tools" Background="#FF333333" Foreground="White" BorderBrush="#FF333333" Margin="0" Padding="10,0" UseLayoutRounding="True" >
                    <MenuItem Header="Encrypt"  Click="EncryptButton" Background="#FF333333" BorderBrush="#FF333333" />
                    <MenuItem Header="Decrypt"  Click="DecryptButton" Background="#FF333333" BorderBrush="#FF333333" />
                    <MenuItem Header="Yeet"  Background="#FF333333" BorderBrush="#FF333333"/>

                </MenuItem>
                <MenuItem Header="Run" Click="Run" Margin="0" Padding="10,0" Background="{x:Null}" />
            </Menu>
            <StackPanel/>
        </DockPanel>


    </Grid>
</Window>
