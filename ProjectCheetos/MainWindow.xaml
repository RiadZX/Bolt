<Window x:Class="ProjectCheetos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectCheetos"
        mc:Ignorable="d"
        Title="Project Cheetos" Height="450" Width="800" Icon="cheetos-united-states-chester-cheetah-cheese-puffs-fritos-united-cheetos-png-900_500.jpg" HorizontalAlignment="Center" VerticalAlignment="Center">
	<Grid>
		<RichTextBox x:Name="TextField" Margin="10,30,10,10" RenderTransformOrigin="0.5,0.5" Background="White" Foreground="Black" AcceptsTab="True">
			<RichTextBox.Resources>
				<Style TargetType="{x:Type Paragraph}">
					<Setter Property="Margin" Value="0"/>
				</Style>
			</RichTextBox.Resources>
			<FlowDocument>
				<Paragraph>
					<Run Text="RichText"/>
					<Run Text="Box"/>
				</Paragraph>
			</FlowDocument>
		</RichTextBox>
		<Menu Height="30" VerticalAlignment="Top" Background="#FFA2A2A2">
			<Image Height="30" Width="300" Source="cheetos-united-states-chester-cheetah-cheese-puffs-fritos-united-cheetos-png-900_500.jpg"/>
		</Menu>
	</Grid>
</Window>
